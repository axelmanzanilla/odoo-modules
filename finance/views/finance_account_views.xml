<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="finance_account_view_tree" model="ir.ui.view">
        <field name="name">finance.account.view.tree</field>
        <field name="model">finance.account</field>
        <field name="arch" type="xml">
            <tree string="Accounts" default_order="name desc, id desc">
                <field name="name" />
                <field name="currency_id" invisible="1" />
                <field name="amount" />
            </tree>
        </field>
    </record>

    <record id="finance_account_view_form" model="ir.ui.view">
        <field name="name">finance.account.view.form</field>
        <field name="model">finance.account</field>
        <field name="arch" type="xml">
            <form string="Accounts">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="description" />
                            <field name="currency_id" invisible="1" />
                            <field name="amount" />
                        </group>
                        <group>
                            <field name="type" invisible="1" />
                            <field name="goal" attrs="{ 'invisible': [('type', '=', 'account')] }" />
                            <field name="goal_amount" attrs="{ 'invisible': [('goal', '=', False)] }" />
                            <field name="goal_percentage" attrs="{ 'invisible': [('goal', '=', False)] }" widget="progressbar" />
                            <field name="budget_end_date" />
                            <field name="budget_review" />
                            <field name="send_email_review" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="finance_account_view_kanban" model="ir.ui.view">
        <field name="name">finance.account.view.kanban</field>
        <field name="model">finance.account</field>
        <field name="arch" type="xml">
            <kanban string="Accounts">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_details">
                            <div>
                                <strong>
                                    <field name="name" />
                                </strong>
                            </div>
                            <div>
                                <field name="goal" invisible="1" />
                                <field name="goal_percentage" attrs="{ 'invisible': [('goal', '=', False)] }" widget="progressbar" />
                                <field name="currency_id" invisible="1" />
                                <field name="amount" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
